# Environment variables for Backend API
# Copy this file to .env and fill in your values

# Pterodactyl Configuration
PT_APP_BASE_URL=https://panel.example.com
PT_APP_API_KEY=ptla_your_application_api_key_here
PT_NODE_ID=1
PT_FALLBACK_NODE_IDS=2,3
HEALTHCHECK_HOST_OVERRIDE=

# Default Server Resources
DEFAULT_SERVER_MEMORY_MB=1024
DEFAULT_SERVER_DISK_MB=10240
DEFAULT_SERVER_CPU_PCT=100

# Queue & Redis Configuration
REDIS_URL=redis://localhost:6379
QUEUE_PREFIX=wa-ptero

# Security Configuration
INTERNAL_SECRET=your_internal_secret_here_change_this
CORS_ALLOWED_ORIGIN=http://localhost:3000
CLAIM_STATUS_REQUIRE_TOKEN=true

# Alerting Configuration
DISCORD_WEBHOOK_URL=
SLACK_WEBHOOK_URL=
ALERT_ENV=development

# Server Configuration
PORT=3001
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_IP_PER_MIN=20
RATE_LIMIT_JID_PER_MIN=5

# Grace Period (in hours)
GRACE_PERIOD_HOURS=4

# Data Directory
DATA_DIR=./data
