{
  "apps": [
    {
      "name": "wa-ptero-backend",
      "script": "dist/index.js",
      "cwd": "./apps/backend",
      "instances": 1,
      "exec_mode": "cluster",
      "watch": false,
      "max_memory_restart": "1G",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3000
      },
      "env_development": {
        "NODE_ENV": "development",
        "PORT": 3000
      },
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "error_file": "./logs/backend-error.log",
      "out_file": "./logs/backend-out.log",
      "log_file": "./logs/backend-combined.log",
      "time": true
    },
    {
      "name": "wa-ptero-bot",
      "script": "dist/index.js",
      "cwd": "./apps/bot",
      "instances": 1,
      "exec_mode": "fork",
      "watch": false,
      "max_memory_restart": "512M",
      "env": {
        "NODE_ENV": "production",
        "RPC_PORT": 3001
      },
      "env_development": {
        "NODE_ENV": "development",
        "RPC_PORT": 3001
      },
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "error_file": "./logs/bot-error.log",
      "out_file": "./logs/bot-out.log",
      "log_file": "./logs/bot-combined.log",
      "time": true,
      "restart_delay": 5000,
      "max_restarts": 10,
      "min_uptime": "30s"
    }
  ]
}
